<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.login.SignUpFragment">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:textColor="#FF6650a4"
        android:text="@string/sign_up"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">


        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            app:tint="@color/appColor" />

    <!--
             <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/download"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:strokeColor="@color/appColor"
            app:strokeWidth="7dp" />
-->

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animalImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_rawRes="@raw/parrot"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
 />
        <ImageView
            android:id="@+id/nextArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            app:tint="@color/appColor"
            />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profileLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        >

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:maxLines="1"
            android:hint="Username"
            android:fontFamily="@font/aldrich"
            android:layout_margin="10dp"

            />
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:maxLines="1"
            android:hint="Email"
            android:fontFamily="@font/aldrich"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:maxLines="1"
            android:hint="Password"
            android:fontFamily="@font/aldrich"
            android:layout_margin="10dp"

            />
        <EditText
            android:id="@+id/passwordOtherEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:maxLines="1"
            android:hint="Password"
            android:fontFamily="@font/aldrich"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/nextStepButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:maxLines="1"
            android:hint="Next Step"
            android:textColorHint="@color/white"
            android:fontFamily="@font/aldrich"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:padding="5dp"
            />
        <LinearLayout
            android:id="@+id/connectionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            >


            <com.google.android.gms.common.SignInButton
                android:id="@+id/gmailButton"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#FBBC04"
                android:fontFamily="@font/aldrich"
                android:hint="g"
                android:contentDescription="gmail"
                android:maxLines="1"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                app:icon="@drawable/gmail" />
        </LinearLayout>




    </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>